{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es2019"],
        "declaration": true,
        "outDir": "dist",
        "baseUrl": "lib",
        "paths": {
            "*": ["node_modules/*", "lib/types/*"]
        }
    },
    "include": ["lib/**/*", "test"]
}
