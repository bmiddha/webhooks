{
    "compilerOptions": {
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "es2019"
        ],
        "declaration": true,
        "outDir": "dist",
        "removeComments": true,
        "baseUrl": "src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}